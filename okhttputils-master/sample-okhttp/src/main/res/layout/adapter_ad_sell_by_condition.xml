<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_logo"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="a000 (0-5、100%)"
        android:layout_alignTop="@+id/img_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/txt_user_account"
        android:layout_toRightOf="@+id/img_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1000-10000 CNY"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_ad_tradeAmount"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img_logo"
        android:layout_below="@+id/txt_user_account"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="114212.89 CNY"
        android:id="@+id/txt_ad_price"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
